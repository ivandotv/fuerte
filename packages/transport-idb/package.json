{
  "name": "@fuerte/transport-idb",
  "version": "2.0.0",
  "private": false,
  "author": "Ivan Vlatkovic",
  "description": "IndexedDB transport mechanism for @fuerte/core",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/transport-idb.esm.js",
  "unpkg": "dist/unpkg/transport-idb.min.js",
  "jsdelivr": "dist/unpkg/transport-idb.min.js",
  "exports": {
    "import": "./dist/esm/transport-idb.esm.js",
    "require": "./dist/cjs/transport-idb.js",
    "development": "./dist/cjs/transport-idb.development.js"
  },
  "sideEffects": false,
  "types": "dist/types/",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix \"src/**/\"",
    "lint:ci": "eslint \"src/**/\"",
    "docs": "del docs/api && typedoc --theme markdown --readme none --excludePrivate  --excludeInternal --exclude ./src/globals.d.ts --out docs/api ./src",
    "test": "cross-env BABEL_ENV=test jest --verbose --coverage --no-cache",
    "test:watch": "cross-env BABEL_ENV=test jest --watch",
    "test:ci": "cross-env BABEL_ENV=test jest --runInBand --ci --coverage --coverageDirectory=coverage",
    "type:check": "tsc -p tsconfig.check-types.json",
    "type:build": "del dist/types && del .buildcache && tsc -p tsconfig.build-types.json",
    "build": "yarn type:build && node ../../scripts/build-browser.js --bundle=umd,cjs,esm",
    "prepublishOnly": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivandotv/fuerte.git"
  },
  "bugs": {
    "url": "https://github.com/ivandotv/fuerte/issues"
  },
  "homepage": "https://github.com/ivandotv/fuerte#readme",
  "keywords": [
    "mobx",
    "@fuerte"
  ],
  "dependencies": {
    "idb": "^6.1.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "fake-indexeddb": "^3.1.3",
    "@fuerte/core": "*"
  },
  "peerDependencies": {
    "@fuerte/core": "*"
  }
}
