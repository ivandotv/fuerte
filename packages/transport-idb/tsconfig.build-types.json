{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/types",
    "tsBuildInfoFile": ".buildcache/core/build-types.tsbuildinfo",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declaration": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/node_modules",
    "src/**/__tests__",
    "src/**/__fixtures__",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/scratch/**"
  ]
}
